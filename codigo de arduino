#include <SPI.h>
#include <MFRC522.h>

#define SS_PIN 10  // Pin del Slave Select (SS) para el m贸dulo RFID
#define RST_PIN 9  // Pin de reset para el m贸dulo RFID

MFRC522 mfrc522(SS_PIN, RST_PIN);  // Crear instancia MFRC522

void setup() {
  Serial.begin(9600);  // Iniciar comunicaci贸n serial
  SPI.begin();         // Iniciar bus SPI
  mfrc522.PCD_Init();  // Iniciar MFRC522
}

void loop() {
  // Verificar si hay una tarjeta RFID presente
  if (mfrc522.PICC_IsNewCardPresent() && mfrc522.PICC_ReadCardSerial()) {
    // Leer y mostrar el UID de la tarjeta
    for (byte i = 0; i < mfrc522.uid.size; i++) {
      Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? "0" : "");
      Serial.print(mfrc522.uid.uidByte[i], HEX);
    }
    Serial.println();

    mfrc522.PICC_HaltA();  // Detener comunicaci贸n con la tarjeta
  }
}

